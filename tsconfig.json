{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": false,
      "esModuleInterop": true
  },
  "include": [ "src/*", "test/*", "src/**/*", "test/**/*" ],
  "exclude": [ "node_modules" ]
}